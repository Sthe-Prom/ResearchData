@model ProfileViewModel
@{
     ViewData["Title"] = "Account";
    Layout = "_dashLayout";
}

<div class="text-center"> 

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h1>Summary User Details</h1>
                        <hr />
                    </div>
                </div>
            </div>
   
            <div class="row column1">
                <div class="col-sm-12 offset-sm-2 center" style="margin: 0 auto; float; none;">
                   

                    <div class="col-12 col-md-12 col-lg-12 text-center" style="float:none; margin: 0 auto;">

                        <div class="form-group text-right">
                            <span><a href="~/Account/Profile" class="btn btn-outline-info">Add New User Account</a></span>
                            <hr />
                        </div>
                        <table class="table table-striped table-bordered table-sm">
                            <tr>                               
                                <th>Profile Picture</th>                                      
                                <th>Name</th>                                      
                                <th>Email</th> 
                                <th>Cell</th> 
                                <td class="text-info h5">Action</td>
                            </tr>
                                                         
                                    @foreach (var item in Model.Accounts)
                                    {
                                        <tr>
                                        
                                            <td>
                                                 <img src="~/images/userprofile/@item.ProfileImg"   
                                                    class="rounded-circle"   
                                                    height="40" width="40"   
                                                    asp-append-version="true" />
                                            </td>
                                            <td class="text-left">@item.Name @item.Surname</td>
                                            <td class="text-left">@item.Email</td>
                                            <td class="text-left">@item.Cell</td>
                                            <td class="text-center">
                                                <form asp-action="Delete" method="post">
                                                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-AccountID="@item.AccountID">
                                                        Edit
                                                    </a>
                                                    <input type="hidden" name="AccountID" value="@item.AccountID" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }                                
                                
                        </table>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

