@model QuestionViewModel
@{
     ViewData["Title"] = "Question";
    Layout = "_dashLayout";
}

<div class="text-center"> 

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h1>Manage Survey Questions</h1>
                        <hr />
                    </div>
                </div>
            </div>
   
            <div class="row column1">
                
                <div class="col-sm-12 offset-sm-2 center" style="margin: 0 auto; float; none;">
                   
                    <div class="col-12 col-md-12 col-lg-12 text-center" style="float:none; margin: 0 auto;">

                        <div class="form-group text-right">
                             <h1>Questions and Question Options</h1>
                             <hr />
                            <span><a href="~/Question/Add" class="btn btn-outline-info">Add New Question</a></span>
                            <span><a href="~/QuestionOption/Index" class="btn btn-outline-info">Question Options</a></span>
                            <span><a href="~/QuestionType/Index" class="btn btn-outline-info">Manage Question Type</a></span> 
                            <span><a href="~/QuestionSubsection/Index" class="btn btn-outline-primary">Asign Questions to Subsection</a></span>                           
                            <hr />
                        </div>
                        <div class="form-group text-right">
                            <h1>Survey and Questions</h1>
                            <hr />                                                  
                            <span><a href="~/QuestionType/Index" class="btn btn-outline-primary">View Completed Surveys</a></span>                            
                            <span><a href="~/SurveyQuestion/Index" class="btn btn-outline-primary">Asign Questions to Surveys</a></span>
                            <hr />
                        </div>
                    
                        <table class="table table-striped table-responsive-lg table-bordered table-sm grid_print">
                            <tr>                                                          
                                <th class="text-center">Question</th> 
                                <th class="text-center">Questtion Abbrev.</th>                                   
                                <th class="text-center text-info h5">Action</th>      
                                @* <th class="text-center">Question Subsection</th> 
                                <th class="text-center">Question Section</th> 
                                <th class="text-center">Cell</th>  *@
                            </tr>
                        
                                @foreach (var item in Model.Questions)
                                {
                                    <tr>                                                        
                                        <td class="text-left">@item.Question_</td>
                                        <td class="text-left">@item.QuestionAbbr</td>
                                        @* <td class="text-right">@item</td> *@
                                        <td class="text-center">
                                            <form id="frm1" asp-action="Delete" method="post">
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-12 col-lg-12">
                                                        <span class="col-sm-4 col-md-4 col-lg-4" style="margin: 0 auto; float: none;">
                                                            <a asp-action="Edit" class="btn btn-sm" asp-route-QuestionID="@item.QuestionID">
                                                                <i class="fa fa-edit" style="color: #00675A;"></i>
                                                            </a>
                                                        </span>
                                                        <span class="col-sm-4 col-md-4 col-lg-4" style="margin: 0 auto; float: none;">
                                                            <input type="hidden" name="QuestionID" value="@item.QuestionID" />
                                                            <button type="submit" class="btn btn-sm"  >
                                                                <i class="fa fa-trash" style="color: #A71930;" aria-hidden="true"></i>
                                                            </button>
                                                        </span>
                                                    </div>
                                                </div>
                                                
                                                @* <span><input type="submit" class="" /><i class="fa fa-trash" aria-hidden="true"></i> </span> *@
                                                @* <a href="#" onclick="document.getElementById('frm1').submit();"><i class="fa fa-trash" aria-hidden="true"></i></a> *@
                                            </form>
                                        </td>
                                    </tr>
                                }
                        </table>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

