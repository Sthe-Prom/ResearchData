@model QuestionTypeViewModel

@{
    ViewData["Title"] = "Edit Q.. Type";
    Layout = "_dashLayout";
}

<div class="text-center"> 

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h1>Edit Questions Types</h1>
                        <hr />
                    </div>
                </div>
            </div>        
                <form asp-action="Edit" method="post" class="text-center">

                    <div asp-validation-summary="All"></div>

                    <div class="container-fluid">                                                      
                        <div class="row">
                            <div class="col-sm-12 col-md-8 col-lg-8" style="margin: 0 auto; float: none;">
                            
                                <input asp-for="QuestionTypeID" type="hidden" class="form-control" />

                                <div class="form-group">
                                    <label asp-for="QuestionTypeName"></label>
                                    <div><span asp-validation-for="QuestionTypeName" class="text-danger"></span></div>
                                    <input asp-for="QuestionTypeName" class="form-control" />
                                </div>
                            
                                <div class="form-group">
                                    <div class="text-center">
                                        <button class="btn btn-primary" type="submit">Save</button>
                                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </form>   
           
        </div>
    </div>
</div>
