@model QuestionTypeViewModel

<div class="row">
    <div class="col-sm">
        <div class="midde_cont">
            <div class="container-fluid">
                <div class="row column1">
              
                <form asp-action="Add" method="post" class="text-center">

                    <div asp-validation-summary="All"></div>

                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12 text-center">
                                <br />
                                <h1>Add New Question Type</h>
                                <hr />
                            </div>

                            <div class="col-12 col-md-8 col-lg-8 text-center" style="float:none; margin: 0 auto;">
                                
                                <div class="form-group">
                                    <label asp-for="@Model.QuestionType.QuestionTypeName"></label>
                                    <div><span asp-validation-for="@Model.QuestionType.QuestionTypeName" class="text-danger"></span></div>
                                    <input asp-for="@Model.QuestionType.QuestionTypeName" class="form-control" />
                                </div>
                            
                                <div class="form-group">
                                    <div class="text-center">
                                        <button class="btn btn-primary" type="submit">Save</button>
                                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                </form>        

                </div>
            </div>
        </div>
    </div>
</div>
