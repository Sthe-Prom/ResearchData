@model SubsectionViewModel

<div class="col-md-10" style="margin: 0 auto; float: none;">
    <div class="white_shd full margin_bottom_30">
        <div class="full">
            <div class="heading1 margin_0">
                <h1>Questions Section</h1>
                
            </div>
        </div>
        <form asp-action="Add" method="post" class="text-center">

            <div asp-validation-summary="All"></div>

            <div class="container-fluid">

                <div class="row">
                  
                    <div class="col-12 col-md-8 col-lg-8 text-center" style="float:none; margin: 0 auto;">
                        
                        <div class="form-group">
                            <label asp-for="@Model.Section.SectionName"></label>
                            <div><span asp-validation-for="@Model.Section.SectionName" class="text-danger"></span></div>
                            <input asp-for="@Model.Section.SectionName" class="form-control" />
                        </div>
                    
                        <div class="form-group">
                            <div class="text-center">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </form>
    </div>
</div>

