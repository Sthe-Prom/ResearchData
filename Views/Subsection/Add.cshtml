@model SubsectionViewModel2
@{    
    ViewData["Title"] = "Add Subsection";
    Layout = "_dashLayout";
}
<div class="text-center"> 

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h1>Add Sub-Section</h1>
                        <hr />
                    </div>
                </div>
            </div>

            <div class="row column1">  

                <div class="col-sm-8" style="margin: 0 auto; float: none;" >
                    <form asp-action="Add" asp-controller="Subsection" method="post" class="text-center" style="margin-top: 20px;">

                        <div asp-validation-summary="All"></div>

                        <div class="container-fluid">

                            <div class="row">
                            
                                <div class="col-12 col-md-8 col-lg-8 text-center" style="float:none; margin: 0 auto;">

                                    <div class="form-group">
                                        <label asp-for="SubsectionName"></label>
                                        <div><span asp-validation-for="SubsectionName" class="text-danger"></span></div>
                                        <input asp-for="SubsectionName" class="form-control" />
                                    </div>

                                    <div class="form-group">  
                                        <label asp-for="SectionID">Sections</label> 
                                        <div><span asp-validation-for="SectionID" class="text-danger"></span></div>    
                                        <select class="form-control" name="SectionID" asp-for="SectionID" asp-items="Model.SelectSections"  >
                                            <option value="SectionID">Select Section</option>
                                        
                                        </select> 
                                    </div>  

                                    @* <input asp-for="SectionID" class="form-control" /> *@
                                                
                                    <div class="form-group">
                                        <div class="text-center">
                                            <button class="btn btn-primary" type="submit">Save</button>
                                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





