@model SubunitViewModel

@{
     ViewData["Title"] = "Edit Survey";
    Layout = "_dashLayout";
}

<div class="text-center"> 

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h1>Sub Units</h1>
                        <hr />

                        
                    </div>
                </div>
            </div>
   
            <div class="row column1">
                <div class="col-12 text-center mt-3 jumbotron">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data"> 
                        
                        <h1>Edit Subunit</h1>  
                        <hr /><br />                

                        <div asp-validation-summary="All"></div>
                        <div class="row">

                            <input asp-for="SubunitID" type="hidden" class="form-control" />  

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="SubunitName"></label>
                                        <div><span asp-validation-for="SubunitName" class="text-danger"></span></div>
                                    <input asp-for="SubunitName" class="form-control" />      
                                </div>
                                <div class="form-group">
                                    <label asp-for="SubunitDesc"></label>
                                        <div><span asp-validation-for="SubunitDesc" class="text-danger"></span></div>
                                    <textarea asp-for="SubunitDesc" rows="1" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SubunitDeptNr"></label>
                                        <div><span asp-validation-for="SubunitDeptNr" class="text-danger"></span></div>
                                    <input asp-for="SubunitDeptNr" type="number" class="form-control" />                
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="SubunitEmail"></label>
                                        <div><span asp-validation-for="SubunitEmail" class="text-danger"></span></div>
                                    <input asp-for="SubunitEmail" class="form-control" />      
                                </div>
                                <div class="form-group">
                                    <label asp-for="SubunitCell"></label>
                                        <div><span asp-validation-for="SubunitCell" class="text-danger"></span></div>
                                    <input asp-for="SubunitCell" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="SubunitServerAddress"></label>
                                        <div><span asp-validation-for="SubunitServerAddress" class="text-danger"></span></div>
                                    <input asp-for="SubunitServerAddress" class="form-control" />                
                                </div>
                            </div>
                        </div>
                            
                        <div class="form-group text-center">
                            <div class="col-md-6 offset-md-3">
                                <span>
                                    <p>Add a logo for your Subunit</p>
                                </span>
                                <div class="">
                                    <label asp-for="SubunitLogo" class="control-label">Add Logo</label>
                                        <div class="custom-file">
                                            <input asp-for="SubunitLogo" name="SubunitLogo" class="custom-file-input" id="customFile" type="file" />
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                        </div>
                                        <span asp-validation-for="SubunitLogo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>                       

                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Save Subunit</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">  
    // Add the following code if you want the name of the file appear on select  
    $(".custom-file-input").on("change", function () {  
        var fileName = $(this).val().split("\\").pop();  
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
    });  
</script> 





    
