@model SubunitViewModel
@{
     ViewData["Title"] = "Survey";
    Layout = "_dashLayout";
}

<div class="text-center"> 

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h1>Sub Units</h1>
                        <hr />
                    </div>
                </div>
            </div>
   
            <div class="row column1">
                <div class="col-sm-12 center" style="margin: 0 auto; float; none;">
                   
                    <div class="col-12 col-md-12col-lg-12 text-center" style="float:none; margin: 0 auto;">

                        <div class="form-group text-right">
                            <span><a href="~/Subunit/Add" class="btn btn-outline-info">Add New Subunit</a></span>
                            <hr />
                        </div>
                    
                        <table class="table table-striped table-bordered ">
                            <tr> 
                                <th class="text-center">Subunit Logo</th>                               
                                <th class="text-center">Subunit Name</th>                                      
                                <th class="text-center">Subunit Email.</th> 
                                <th class="text-center">Dept Nr.</th>                     
                                <th class="text-center">Cell</th> 
                                <th class="text-info h5">Action</th>
                            </tr>
                             @{
                                if(Model.Subunits.Count() > 0)
                                {

                                    foreach (var item in Model.Subunits)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/images/subunit/@item.SubunitLogo"   
                                                    class="rounded-circle"   
                                                    height="40" width="40"   
                                                    asp-append-version="true" />  
                                            </td> 
                                            <td class="text-right">@item.SubunitName</td>
                                            <td class="text-right">@item.SubunitEmail</td>
                                            <td class="text-right">@item.SubunitDeptNr</td>
                                            <td class="text-right">@item.SubunitCell</td>
                                            <td class="text-center">
                                                <form asp-action="Delete" method="post">
                                                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-SubunitID="@item.SubunitID">
                                                        Edit
                                                    </a>
                                                    <input type="hidden" name="SubunitID" value="@item.SubunitID" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            } 
                        </table>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

