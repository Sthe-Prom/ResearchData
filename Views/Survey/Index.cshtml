@model SurveyViewModel
@{
     ViewData["Title"] = "Survey";
    Layout = "_dashLayout";
}

<div class="text-center"> 

    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h1>Surveys</h1>
                        <hr />
                    </div>
                </div>
            </div>
   
            <div class="row column1">

                 <div class="col-md-12" style="margin: 0 auto; float: none;">
                        <div class="white_shd full margin_bottom_30">
                            <div class="full">
                                <div class="heading1 margin_0 mt-2">
                                    <h2>Manage Surveys</h2>
                                    <hr />
                                    <div class="row column1">      
                                        <div class="col-sm-12" style="margin: 0 auto; float; none;">
                                    
                                            <div class="col-12 col-md-10 col-lg-10 text-center" style="float:none; margin: 0 auto;">

                                                <div class="form-group text-right">
                                                    <span><a href="~/Survey/Add" class="btn btn-outline-info">Add New Survey</a></span>
                                                    <span><a href="~/Question/Index" class="btn btn-outline-info">Manage Survey Questions</a></span>
                                                    <hr />
                                                </div>
                                            
                                                <table class="table table-striped table-bordered">
                                                    <tr>                               
                                                        <th>Survey Name</th>                                      
                                                        <th class="text-right">Date Created</th>  
                                                        <th class="text-info h5">Action</th>    
                                                    </tr>
                                                @{
                                                    if(Model.Surveys.Count() > 0)
                                                    {

                                                        foreach (var item in Model.Surveys)
                                                        {
                                                            <tr>
                                                                                
                                                                <td class="text-right">@item.SurveyName</td>
                                                                <td class="text-right">@item.SurveyDate</td>
                                                                <td class="text-center">
                                                                    <form asp-action="Delete" method="post">
                                                                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-SurveyID="@item.SurveyID">
                                                                            Edit
                                                                        </a>
                                                                        <input type="hidden" name="SurveyID" value="@item.SurveyID" />
                                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                                            Delete
                                                                        </button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                } 
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                

                </div>
            </div>
        </div>
    </div>
    
</div>


